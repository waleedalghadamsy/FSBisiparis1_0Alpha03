<Window x:Class="SystemComponentsPublishTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemComponentsPublishTool"
        mc:Ignorable="d"
        Title="Bisipariş System Publish Tool" Height="350" Width="400" ResizeMode="CanMinimize">
    <Grid>
        <Button Content="Publish Web Project" HorizontalAlignment="Center" Margin="0,40,0,0" VerticalAlignment="Top" 
                Width="200" Height="30"
                Click="PublishWebProject_Click"/>
        <Button Content="Publish Backend Service Project" HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Top" 
                Width="200" Height="30"
                Click="PublishBackendServiceProject_Click"/>
        <Button Content="Publish Security Service Project" HorizontalAlignment="Center" Margin="0,160,0,0" VerticalAlignment="Top" 
                Width="200" Height="30"
                Click="PublishSecurityServiceProject_Click"/>
        <Button Content="Publish Logger Service Project" HorizontalAlignment="Center" Margin="0,250,0,0" VerticalAlignment="Top" 
                Width="200" Height="30"
                Click="PublishLoggerServiceProject_Click"/>
    </Grid>
</Window>
