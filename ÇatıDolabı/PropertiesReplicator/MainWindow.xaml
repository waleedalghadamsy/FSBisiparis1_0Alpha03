<Window x:Class="PropertiesReplicator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PropertiesReplicator"
        mc:Ignorable="d"
        Title="Properties Replicator" Height="550" Width="1000" WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid>
        <Button Content="Browse..." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"
                Click="BrowseButton"/>
        <TextBlock x:Name="classPathTextBlock" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top"/>
        <Label Content="Found classes" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="filesListBox" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top" Width="900" Height="300"/>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" Margin="100,420,0,0" VerticalAlignment="Top" Width="75"
                Click="StartButton"/>
    </Grid>
</Window>
