@page
@model BisiparişWeb.Pages.SistemGüvenlik.GirişModel
@{
    Layout = "_GirişLayout";
    ViewData["Title"] = "Giriş";
}

<h2>Bisipariş Sistem Giriş</h2>

<div>
    <form role="form" method="post">
        <div class="form-group">
            <div class="row">
                <div class="col-xs-4">
                    <label>Giriş İsim</label>
                    <input type="text" asp-for="Girişİsim" class="form-control" placeholder="Yazınız ...">
                    <span asp-validation-for="Girişİsim"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-xs-4">
                    <label>Şifre</label>
                    <input type="password" id="şifreMetin" asp-for="Şifre" class="form-control" placeholder="Yazınız ...">
                    <span asp-validation-for="Şifre"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-xs-4">
                    <label>Şifre Tekrar</label>
                    <input type="password" id="şifreOnayı" class="form-control" placeholder="Yazınız ...">
                    <div class="col-xs-3">
                        <label id="doğrulamakSonuç" style="color:red"></label>
                    </div>
                </div>
            </div>
        </div>
        <div class="box-footer">
            <div class="row">
                <button type="submit" class="btn btn-primary" onclick="return doğrula()">Giriş</button>
            </div>
        </div>
    </form>
</div>

<script src="~/lib/jquery/core.js"></script>
<script src="~/lib/jquery/jquery.js"></script>

@section Scripts {
    <script type="text/javascript">
        function doğrula() {
            try {
                //alert("Here -- '" + $("#şifreMetin").val() + "' | '" + $("#şifreOnayı").val() + "'");

                var şfr = $("#şifreMetin").val();
                var şfrOny = $("#şifreOnayı").val();
                if (şfr != şfrOny) {
                    //alert("Passwords do not match.");

                    $("#doğrulamakSonuç").text("Yanlış");

                    return false;
                }

                return true;
            } catch (e) {

            }
        };
    </script>
}
